generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String 
  password String
  number String? @unique
  registered_at DateTime
  balance Balance?
  transactions OnRampTransactions[]
}

model Balance{
  id Int @id @default(autoincrement())
  userId Int @unique
  balance Int @default(200)
  locked_amount Int @default(0)
  user User @relation(fields: [userId],references: [id])
}

model OnRampTransactions{
  id Int @id @default(autoincrement())
  userId Int @unique
  amount Int 
  token String @unique
  startTime DateTime
  provider String
  receiver String
  status OnRampStatus
  user User @relation(fields: [userId],references: [id])
}

enum OnRampStatus{
  Success
  Failure
  Processing
}